<!-- First content -->
<div class="content1 flex items-center justify-center w-full h-full bg-[url('/images/hamburger2.jpg')] bg-cover bg-center">
    <div class="w-full flex justify-center items-center bg-gradient-to-t from-[#100f13] to-transparent">
        <div class="w-9/12 h-full flex justify-center items-center my-10">
            <div class="w-full md:w-7/12 lg:w-8/12">
                <h1 class="text-3xl lg:text-5xl font-semibold text-slate-200">Many delicious recipes that will interest you!</h1>
                <p class="text-base lg:text-xl text-slate-300 my-10">You can take a look the desserts, pastas, meats, pizzas, hamburgers and many more recipes that will interest you. You can also share many of your recipes with people.</p>
                <div class="flex space-x-2 text-slate-300">
                    <a href="/explore-latest" class="border-2 border-color-500 hover:border-color-400 bg-color-500 hover:bg-color-400 w-fit rounded-md px-5 py-3 text-center font-medium transition duration-200 ease-linear">Explore Latest</a>
                    <a href="/explore-random" class="border-2 border-color-600 hover:border-color-500 hover:bg-color-500 w-fit rounded-md px-5 py-3 text-center font-medium transition duration-200 ease-linear">Show Random</a>
                </div>
            </div>

            <div class="hidden md:block w-5/12 lg:w-4/12">
                <img src="/images/blob.png" loading="lazy" alt="hamburger image">
            </div>
        </div>
    </div>
</div>

<!-- Categories -->
<div class="flex items-center justify-center w-full h-full">
    <div class="w-9/12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 xl:grid-cols-6 gap-10 my-10">
        <% if(categories != '') { %>
            <% categories.forEach((category, index) => { %>
                <a href="/categories/<%- category.name %>">
                    <div class="hover:opacity-50 transition duration-200 ease-linear">
                        <img class="object-cover object-center rounded-md w-full h-36" src="images/<%- category.image %>" alt="<%- category.name %>" loading="lazy">
                    </div>
                    <div class="text-center text-slate-300 text-lg font-medium mt-2"><%- category.name %></div>
                </a>
            <% }) %>
        <% } %> 

        <a href="/categories">
            <div class="hover:brightness-150 transition duration-200 ease-linear relative">
                <img class="object-cover object-center rounded-md w-full h-36" src="images/viewall.jpg" loading="lazy" alt="View All Categories">
                <div class="la-ball-fall">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>
            <div class="text-center text-slate-300 text-lg font-medium mt-2">See all</div>
        </a>  
    </div>
</div>

<!-- Latest Recipes -->
<section class="flex flex-col items-center justify-center w-full h-full my-10">
    <div class="flex justify-between items-center w-9/12 h-full mb-8 font-medium text-slate-200">
        <h2 class="text-3xl w-2/3">Latest Recipes</h2>
        <a href="/explore-latest" class="bg-color-500 hover:bg-opacity-50 rounded-md px-5 py-2 w-fit text-center transition duration-200 ease-linear">See all</a>
    </div>

    <div class="w-9/12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-5 gap-10">

        <% if(food != '') { %> 
            <% food.latest.forEach((recipe, index) => { %> 
                <a href="/recipe/<%= recipe._id %> ">
                    <div class="hover:opacity-50 transition duration-200 ease-linear">
                        <img class="object-cover object-center rounded-md w-full h-72" src="uploads/<%- recipe.image %>" loading="lazy" alt="New Chocolate Cake">
                    </div>
                    <div class="text-center text-slate-300 text-lg font-medium mt-2"><%= recipe.name %> </div>
                </a>
            <% }) %> 
            <% } else { %> 
                <p class="text-slate-300 text-xl">No items found.</p>
            <% } %>
    </div>
</section>

